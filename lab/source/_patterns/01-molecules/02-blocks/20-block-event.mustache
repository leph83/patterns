<article class="block  block--news">
    <a href="{{ url }}" class="block__link" title="{{ headline.short }}">
        <div class="grid">
            <div class="grid__item  one-third">
                <div class="block__image">
                    {{> atoms-landscape-4x3 }}
                </div>
            </div>

            <div class="grid__item  two-thirds">
                <div class="block__title">
                    <h2 class="headline">{{ headline.short }}</h2>
                </div>

                <div class="block__date">
                    {{ date.short }} - {{ date.short }}
                </div>

                <div class="block__location">
                    {{ headline.short }}
                </div>
                
                <div class="block__excerpt">
                    <p>{{ excerpt.medium }}</p>
                </div>

                <div class="block__more">
                    {{ more }}
                </div>
            </div>
        </div>
    </a>
</article>