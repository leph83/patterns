{{/ show-comments }}
<{{ section-tag }} 
    class="section  section--{{ section-modifier }}  {{# show-section-image }}cover{{/ show-section-image }}"  
    {{# show-section-image }}style="background-image:url({{ section-image }});"{{/ show-section-image }}
    >

    {{# show-section-overlay }}
        <div class="section__overlay  stretch"></div>
    {{/ show-section-overlay }}

    <div class="section__content">
        
        <div class="grid  {{ section-title-grid }}">
            <div class="grid__item  {{ section-title-grid-item  }}">
                {{> molecules-section-header }}
            </div>
        </div>

        {{# show-section-items }}
        <div class="grid  {{ section-grid }}">
            {{# section-items }}
                <div class="grid__item  {{ section-grid-item }}"> 
                    {{> molecules-block-text }}
                </div>
            {{/ section-items }}
        </div>
        {{/ show-section-items }}

        {{# show-section-button }}
            <div class="section__button__container">
                <a class="section__button" href="" title="{{ section-title }}">{{ more }}</a>
            </div>
        {{/ show-section-button }}
    
    </div>

</{{ section-tag }}>